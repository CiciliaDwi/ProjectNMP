<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00001C"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Logo atau gambar game -->

    <!-- Spinner untuk filter pencapaian berdasarkan tahun -->

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="E-Sports"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/gameLogo"
        android:layout_width="448dp"
        android:layout_height="246dp"
        android:layout_gravity="center"
        android:contentDescription="Game Logo"
        android:scaleType="centerCrop"
        android:src="@drawable/valorant" />

    <Spinner
        android:id="@+id/spinnerTahun"
        android:layout_width="389dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:background="#00001C"
        android:backgroundTint="#88FFFFFF"
        android:foregroundTint="#FFFFFF"
        android:spinnerMode="dropdown"
        android:visibility="visible" />

    <!-- Daftar pencapaian tim -->
    <TextView
        android:id="@+id/achievementLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Team Achievements:"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/achievementList"
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:background="#70F2F2F2"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>
